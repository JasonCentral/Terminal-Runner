<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:weightSum="100">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inside_layout"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="30"
        >

        <ImageView
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/orange_rectangle"
            android:elevation="9dp"
            android:background="@drawable/rect_shadow1"
            />

        <TextView
            android:id="@+id/start_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/start_button"
            android:layout_alignEnd="@id/start_button"
            android:layout_alignStart="@id/start_button"
            android:layout_alignTop="@id/start_button"
            android:elevation="10dp"
            android:textSize="20sp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="@string/start_text"
            android:textColor="#000000" />

    </RelativeLayout>


</LinearLayout>